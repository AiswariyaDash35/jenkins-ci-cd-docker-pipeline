pipeline {
    agent any

    stages {
         stage('Clone') {
            steps {
                git 'https://github.com/AiswariyaDash35/jenkins-ci-cd_pipeline.git'
            }
        }
        
        stage('Build Docker Image') {
            steps {
                script {
                    // Build Docker image
                    docker.build('fastapi-app:latest')
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                script {
                    // Push the Docker image to a container registry
                    docker.withRegistry('https://registry.example.com', 'dockerhubid') {
                        docker.image('fastapi-app:latest').push()
                    }
                }
            }
        }
    }
}
